{
    "Parameters": {
        "CidrBlock": {
            "Type": "String"
        }
    },
    "Resources": {
        "VPC": {
            "Type": "AWS::EC2::VPC",
            "Properties": {
                "CidrBlock": {
                    "Ref": "CidrBlock"
                },
                "Tags": [
                    {"Key" : "ProjectName", "Value" : "sceptre-vpc-lab-mihail"},
                    {"Key" : "Name", "Value" : "vpc-lab-mihail" }
                ]
            }
        },

        "PublicSubnet1" : {
            "Type" : "AWS::EC2::Subnet",
            "Properties" : {
                "VpcId" : { "Ref" : "VPC" },
                "CidrBlock" : "10.0.0.0/24",
                "AvailabilityZone" : { "Fn::Select" : ["0", { "Fn::GetAZs" : { "Ref" : "AWS::Region" } }]},
                "Tags" : [
                    {"Key" : "ProjectName", "Value" : "sceptre-vpc-lab-mihail"},
                    {"Key" : "Network", "Value" : "Public" },
                    {"Key" : "Name", "Value" : "PublicSubnet1" }
                ]
            }
        },

        "PrivateSubnet1" : {
            "Type" : "AWS::EC2::Subnet",
            "Properties" : {
                "VpcId" : { "Ref" : "VPC" },
                "CidrBlock" : "10.0.1.0/24",
                "AvailabilityZone" : { "Fn::Select" : ["1", { "Fn::GetAZs" : { "Ref" : "AWS::Region" } }]},
                "Tags" : [
                    {"Key" : "ProjectName", "Value" : "sceptre-vpc-lab-mihail"},
                    {"Key" : "Network", "Value" : "Private" },
                    {"Key" : "Name", "Value" : "PrivateSubnet1" }
                ]
            }
        },

        "InternetGateway" : {
            "Type" : "AWS::EC2::InternetGateway",
            "Properties" : {
                "Tags" : [
                    {"Key" : "ProjectName", "Value" : "sceptre-vpc-lab-mihail"},
                    {"Key" : "Network", "Value" : "Public" },
                    {"Key" : "Name", "Value" : "InternetGateway" }
                ]
            }
        },

        "GatewayToInternet" : {
            "Type" : "AWS::EC2::VPCGatewayAttachment",
            "Properties" : {
                "VpcId" : { "Ref" : "VPC" },
                "InternetGatewayId" : { "Ref" : "InternetGateway" }
            }
        },

        "ElasticIP": {
            "Type" : "AWS::EC2::EIP",
            "Properties" : {
                "Domain" : "vpc"
            }
        },

        "NATGateway" : {
            "Type" : "AWS::EC2::NatGateway",
            "Properties" : {
                "AllocationId" : { "Fn::GetAtt" : ["ElasticIP", "AllocationId"] },
                "SubnetId" : { "Ref" : "PublicSubnet1" },
            }
        },

        "PublicRouteTable" : {
            "Type" : "AWS::EC2::RouteTable",
            "Properties" : {
                "VpcId" : {"Ref" : "VPC"},
                "Tags" : [
                    {"Key" : "ProjectName", "Value" : "sceptre-vpc-lab-mihail"},
                    {"Key" : "Network", "Value" : "Public" },
                    {"Key" : "Name", "Value" : "PublicRouteTable" }
                ]
            }
        },

        "PublicRoute" : {
            "Type" : "AWS::EC2::Route",
            "DependsOn" : "GatewayToInternet",
            "Properties" : {
                "RouteTableId" : { "Ref" : "PublicRouteTable" },
                "DestinationCidrBlock" : "0.0.0.0/0",
                "GatewayId" : { "Ref" : "InternetGateway" }
            }
        },

        "PublicSubnetRouteTableAssociation1" : {
            "Type" : "AWS::EC2::SubnetRouteTableAssociation",
            "Properties" : {
                "SubnetId" : { "Ref" : "PublicSubnet1" },
                "RouteTableId" : { "Ref" : "PublicRouteTable" }
            }
        },

        "PrivateRouteTable" : {
            "Type" : "AWS::EC2::RouteTable",
            "Properties" : {
                "VpcId" : {"Ref" : "VPC"},
                "Tags" : [
                    {"Key" : "ProjectName", "Value" : "sceptre-vpc-lab-mihail"},
                    {"Key" : "Network", "Value" : "Private" },
                    {"Key" : "Name", "Value" : "PrivateRouteTable" }
                ]
            }
        },

        "PrivateRoute" : {
            "Type" : "AWS::EC2::Route",
            "Properties" : {
                "RouteTableId" : { "Ref" : "PrivateRouteTable" },
                "DestinationCidrBlock" : "0.0.0.0/0",
            "NatGatewayId" : { "Ref" : "NATGateway" }
            }
        },

        "PrivateSubnetRouteTableAssociation" : {
            "Type" : "AWS::EC2::SubnetRouteTableAssociation",
            "Properties" : {
                "SubnetId" : { "Ref" : "PrivateSubnet1" },
                "RouteTableId" : { "Ref" : "PrivateRouteTable" }
            }
        },

        "BastionElasticIP": {
            "Type" : "AWS::EC2::EIP",
            "Properties" : {
                "Domain" : "vpc"
            }
        },

        "BastionSecurityGroup" : {
            "Type" : "AWS::EC2::SecurityGroup",
            "Properties" : {
                "GroupName" : "BastionSecurityGroup",
                "GroupDescription" : "BastionSecurityGroup",
                "SecurityGroupIngress" : [{
                    "IpProtocol" : "tcp",
                    "FromPort" : "22",
                    "ToPort" : "22",
                    "CidrIp" : "0.0.0.0/0"
                }],
                "SecurityGroupEgress" : [{
                    "IpProtocol" : "tcp",
                    "FromPort" : "0",
                    "ToPort" : "65535",
                    "CidrIp" : "0.0.0.0/0"
                }],
                "Tags" :  [ 
                    {"Key" : "ProjectName", "Value" : "sceptre-vpc-lab-mihail"}
                ],
                "VpcId" : { "Ref" : "VPC" }
            }
        },

        "BastionEC2Instance" : {
            "Type" : "AWS::EC2::Instance",
            "Properties" : {
                "ImageId" : "ami-d7b9a2b1",
                "KeyName" : "mihail.ivanov",
                "InstanceType" : "t2.small",
                "SubnetId" : { "Ref" : "PublicSubnet1" },
                "SecurityGroupIds" : [ { "Ref" : "BastionSecurityGroup" } ],
                "Tags" : [
                    {"Key" : "ProjectName", "Value" : "sceptre-vpc-lab-mihail"},
                    {"Key" : "Network", "Value" : "Public" },
                    {"Key" : "Name", "Value" : "Bastion" }
                ]
            }
        },

        "BastionElasticIPAssociation" : {
            "Type": "AWS::EC2::EIPAssociation",
            "Properties": {
                "AllocationId" : { "Fn::GetAtt" : ["BastionElasticIP", "AllocationId"] },
                "InstanceId": { "Ref" : "BastionEC2Instance" }
            }
        }

    },
    "Outputs": {
        "VpcId": {
            "Value": {
                "Ref": "VPC"
            }
        }
    }
}